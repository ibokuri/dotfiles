[core]
    editor = nvim
    excludesFile = ~/.gitignore
	fsmonitor = true

[init]
	defaultBranch = main

[user]
	name = Danh Phan
	email = input@danh.computer
	signingkey = F1C20A47F6057C43

[github]
	user = ibokuri

[gpg]
	program = gpg2

[credential]
	helper = osxkeychain

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = input@danh.computer
	smtpserverport = 587
	chainreplyto = false
	aliasesfile = $HOME/.gitaliases
	aliasfiletype = mailrc

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[branch]
  autosetuprebase = always

[commit]
	gpgsign = true

[push]
	default = tracking
	autoSetupRemote = true

[pull]
    ff = only

[rebase]
    autosquash = true

[diff]
    algorithm = histogram

[help]
    autocorrect = prompt

[fetch]
	writeCommitGraph = true

[diff]
    tool = difftastic
    external = difft

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[pager]
    difftool = true
